<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="Weather Location">
        <SwitchPreference
            app:key="USE_DEVICE_LOCATION"
            app:title="Use device location"
            app:summary="Allow the app to get your location"
            app:defaultValue="false"
            app:disableDependentsState="true"/>

        <EditTextPreference
            app:key="CUSTOM_LOCATION"
            app:title="Location"
            app:summary="The location for which the weather is displayed"
            app:defaultValue="Bengaluru"
            app:dependency="USE_DEVICE_LOCATION"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:key="theme_category"
        app:title="Theme">

        <ListPreference
            app:key="@string/theme_pref_key"
            app:title="Choose theme"
            app:defaultValue="light"
            app:dialogTitle="Choose theme"
            app:entries="@array/theme_list_array"
            app:entryValues="@array/theme_entry_array"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Units">
        <ListPreference
            app:key="UNIT_SYSTEM"
            app:title="Unit system"
            app:summary="%s"
            app:defaultValue="METRIC"
            app:entries="@array/unitSystemEntries"
            app:entryValues="@array/unitSystemValues"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>